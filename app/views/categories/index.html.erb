<h1 class="mb-4 fw-bold">Categories</h1>

<div class="d-flex justify-content-between align-items-center mb-4">
  <p class="text-muted mb-0">Manage all content categories in the system.</p>
  <%= link_to "New Category", new_category_path, class: "btn btn-primary" %>
</div>

<div class="card shadow-sm rounded-4">
  <div class="table-responsive">
    <table class="table table-hover align-middle mb-0">
      <thead class="table-light">
        <tr>
          <th scope="col">Name</th>
          <th scope="col">Description</th>
          <th scope="col" class="text-end">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @categories.each do |category| %>
          <tr>
            <td class="fw-semibold"><%= category.name %></td>
            <td class="text-muted"><%= truncate(category.description, length: 100) %></td>
            <td class="text-end">
              <%#= link_to category, class: "btn btn-sm btn-outline-secondary me-1", title: "View" do %>
                <%# <i class="bi bi-eye"></i> %>
              <%# end %>
              <%= link_to edit_category_path(category), class: "btn btn-sm btn-outline-warning me-1", title: "Edit" do %>
                <i class="bi bi-pencil"></i>
              <% end %>
              <%= button_to category_path(category), method: :delete, data: { confirm: "Are you sure?" },
                    class: "btn btn-sm btn-outline-danger", form: { class: "d-inline" } do %>
                <i class="bi bi-trash"></i>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
