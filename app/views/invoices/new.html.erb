<div class="container py-4">
  <div class="row justify-content-center">
    <div class="col-lg-10">
      <div class="mb-4 d-flex justify-content-between align-items-center">
        <h1 class="h3 mb-0">🧾 New Invoice</h1>
        <%= link_to "← Back to Invoices", invoices_path, class: "btn btn-outline-secondary" %>
      </div>

      <% if @invoice.errors.any? %>
        <div class="alert alert-danger">
          <h5 class="alert-heading">There were some problems with your submission:</h5>
          <ul class="mb-0">
            <% @invoice.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <%= render 'form', form_builder: form_with(model: @invoice, local: true) %>
    </div>
  </div>
</div>
